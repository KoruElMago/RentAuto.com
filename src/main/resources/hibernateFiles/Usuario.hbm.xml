<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="core.usuario" table="usuarios" >
        <id name="id" type="java.lang.integer" column="id">
            <generator class="identity" />
        </id>
        <property name="nombre" type="string" column="NOMBRE" length="20"/>
        <property name="apellido" type="string" column="APELLIDO" length="20"/>
        <property name="nombreUsuario" type="string" column="nombreUsuario"/>
        <property name="mail" type="string" column="mail"/>
        <property name="fechaNacimiento" type="string" column="fechaNacimiento"/>
        <property name="estaValidada" type="boolean" column="estaValidada"/>
        <property name="password" type="string" column="password"/>
    </class>
</hibernate-mapping>